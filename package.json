{
    "name": "ableton-cookbook",
    "version": "0.1.0",
    "description": "The Ableton Cookbook - Share and discover Ableton Live production recipes",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "npm run build --workspace=packages/mcp-server",
        "dev:mcp": "npm run dev --workspace=packages/mcp-server",
        "start:mcp": "npm run start --workspace=packages/mcp-server",
        "lint": "eslint packages/mcp-server/src --ext .ts",
        "format": "prettier --write \"packages/**/*.{ts,js,json,md}\""
    },
    "keywords": [
        "ableton",
        "music-production",
        "mcp",
        "recipes",
        "workflow"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.55.0",
        "@typescript-eslint/parser": "^8.55.0",
        "7zip-bin": "^5.2.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.4.2"
    }
}
